<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/main_radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_content_fragment_home"
            android:button="@android:color/transparent"
            android:textSize="14sp"
            style="@style/bottom_tab_style"

            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_content_fragment_newcenter"
            style="@style/bottom_tab_style"

            android:text="新闻" />

        <RadioButton
            android:id="@+id/rb_content_fragment_smartservice"
            style="@style/bottom_tab_style"

            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_govaffairs"
            style="@style/bottom_tab_style"

            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_content_fragment_setting"
            style="@style/bottom_tab_style"

            android:text="设置" />
    </RadioGroup>


</LinearLayout>

